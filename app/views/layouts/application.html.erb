<!DOCTYPE html>
<html>
<head>
  <title>DeathStar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Death Star Systems</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if logged_in? %>
              <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Home', root_url %></li>
              <li class="<%= 'active' if current_page?(armamentos_path) %>"><%= link_to 'Armamentos', armamentos_url %></li>
              <li class="<%= 'active' if current_page?(aeronaves_path) %>"><%= link_to 'CaÃ§as Imperiais', aeronaves_url %></li>
              <li class="<%= 'active' if current_page?(soldados_path) %>"><%= link_to 'Stormtroopers', soldados_url %></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="<%= 'active' if current_page?(user_session_path) %>"><%= link_to "Log in", new_user_session_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
</header>
<section class="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/footer' %>
</body>
</html>

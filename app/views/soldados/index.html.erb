<p id="notice"><%= notice %></p>

<h1>Listing Soldados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Patente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @soldados.each do |soldado| %>
      <tr>
        <td><%= soldado.nome %></td>
        <td><%= soldado.patente %></td>
        <td><%= link_to 'Show', soldado %></td>
        <td><%= link_to 'Edit', edit_soldado_path(soldado) %></td>
        <td><%= link_to 'Destroy', soldado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Soldado', new_soldado_path %>

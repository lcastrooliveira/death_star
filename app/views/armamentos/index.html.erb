<p id="notice"><%= notice %></p>

<h1>Lista dos Armamentos Prontos Para Uso</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Poder de Destruição</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armamentos.each do |armamento| %>
      <tr>
        <td><%= armamento.nome %></td>
        <td><%= armamento.descricao %></td>
        <td><%= armamento.poder_destruicao %></td>
        <td><%= armamento.quantidade %></td>
        <td><%= link_to 'Detalhes', armamento %></td>
        <td><%= link_to 'Editar', edit_armamento_path(armamento) %></td>
        <td><%= link_to 'Destruir', armamento, method: :delete, data: { confirm: 'Tem Certeza' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Armamento', new_armamento_path, :class => "btn btn-primary" %>
